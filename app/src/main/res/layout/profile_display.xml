<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/horizBar1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/save"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#bbbbbb"
        android:text="" />

    <GridLayout
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizBar1"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/genderLabel"
            android:layout_below="@+id/horizBar1"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="0"
            android:text="Name:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/space1"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nameLabel"
            android:layout_centerHorizontal="true"
            android:layout_column="2"
            android:layout_row="0"
            android:background="#efefef"
            android:padding="3dp"
            android:text="User Name" />

        <TextView
            android:id="@+id/genderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/username"
            android:layout_below="@+id/nameLabel"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="1"
            android:text="Gender:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:background="#efefef"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/dobLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/genderLabel"
            android:layout_below="@+id/genderLabel"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="2"
            android:text="Birthday:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editDOB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:background="#efefef"
            android:ems="10"
            android:inputType="date"
            android:padding="3dp"
            android:text="01/01/2000" />

        <TextView
            android:id="@+id/degreeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dobLabel"
            android:layout_below="@+id/dobLabel"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="3"
            android:text="Degree:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinnerDegree"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:background="#efefef"
            android:spinnerMode="dropdown" />


        <TextView
            android:id="@+id/majorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/degreeLabel"
            android:layout_below="@+id/degreeLabel"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="4"
            android:text="Major:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinnerMajor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:background="#efefef"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/gradyearLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/majorLabel"
            android:layout_below="@+id/majorLabel"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="5"
            android:text="Grad Year:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinnerGradYear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            android:background="#efefef"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/gradyearLabel"
            android:layout_below="@+id/gradyearLabel"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="6"
            android:text="Email:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="6"
            android:background="#efefef"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="3dp"
            android:text="user.name@mavs.uta.edu" />

        <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emailLabel"
            android:layout_below="@+id/emailLabel"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="7"
            android:text="Phone:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/residenceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="8"
            android:text="Residence:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinnerResidence"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="8"
            android:background="#efefef"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="7"
            android:background="#efefef"
            android:inputType="phone"
            android:padding="3dp"
            android:text="(123) 456-7890" />
    </GridLayout>

    <CheckBox
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileView"
        android:layout_marginLeft="15dp"
        android:checked="false"
        android:text="Private profile" />

    <TextView
        android:id="@+id/horizBar2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/privacy"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#bbbbbb" />

    <GridLayout
        android:id="@+id/passwordView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/changePassword"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/passwordLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_row="0"
            android:text="New Password:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/space2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0" />

        <EditText
            android:id="@+id/editPassword1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:background="#efefef"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="3dp"
            android:text="" />

        <TextView
            android:id="@+id/passwordLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Confirm Password:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editPassword2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:background="#efefef"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="3dp"
            android:text="" />
    </GridLayout>

    <TextView
        android:id="@+id/changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizBar2"
        android:layout_marginLeft="15dp"
        android:text="change password"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#555555"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="(x) exit"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff0000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="(✓) save changes"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#00aa00"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/exit"
        android:layout_below="@+id/changePassword"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="52dp"
        android:text="Delete Profile" />

</RelativeLayout>